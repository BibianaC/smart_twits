retweets.erb

<section id="retweets">
  Retweets
  <ul>
    <% @retweets.each do |tweet| %><li><%= "'#{tweet[0]}'. Number of retweets: #{tweet[1]}" %></li>
    <% end %>
  <ul>
</section><br>

Followers

<section id="followers">
  Followers
  <ul>
    <% @followers.each do |el| %>
      <li><%= "#{el[0]}: '#{el[1]}' Followers: #{el[2]}" %></li>
    <% end %>
  </ul>
</section><br>

Mentions

<section id="mentions">
  Mentions
  <ul>
    <% @mentions.each do |mention| %>
      <li><a href="http://twitter.com/<%= mention[0] %>"><%= mention[0] %></a> Mentioned <%= mention[1] %> times</li>
    <% end %>
  </ul>
</section><br>

Words

<section id="words">
  <% array = [] %>
  <% @words.each {|word| array << word[0]} %>
  <% words = array.first(3).join(" ") %>
  <a href="http://google.com/?q=<%=words%>">Google This</a>
</section><br>

<script src="http://d3js.org/d3.v3.min.js" charset="utf-8"></script>
<script src="http://www.jasondavies.com/wordcloud/d3.layout.cloud.js"></script>
<script src="js/wordcloud.js" type="text/javascript"></script>

<script>
  var data = <%= @words.to_json %>;
  create_cloud(data);
</script>